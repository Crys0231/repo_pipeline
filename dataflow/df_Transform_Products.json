{
	"name": "df_Transform_Products",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_DataLake_Raw_Products",
						"type": "DatasetReference"
					},
					"name": "dfTransformProducts"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "Select"
				}
			],
			"scriptLines": [
				"source(output(",
				"          category as string,",
				"          description as string,",
				"          id as short,",
				"          image as string,",
				"          price as double,",
				"          rating as (count as short, rate as double),",
				"          title as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> dfTransformProducts",
				"dfTransformProducts select(mapColumn(",
				"          category,",
				"          description,",
				"          product_id = id,",
				"          image,",
				"          price,",
				"          rating,",
				"          title",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Select"
			]
		}
	}
}